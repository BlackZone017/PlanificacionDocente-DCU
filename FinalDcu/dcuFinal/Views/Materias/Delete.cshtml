@model dcuFinal.Models.Materia

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <section class="section">
        <div class="notification is-danger">
            <h2 class="title is-size-4">Borrar</h2>

            <h3 class="subtitle is-size-6">Seguro que quiere borrar esta materia? <b>Se borraran todas sus asignaciones!</b> </h3>
        </div>

        <hr />

        <div class="columns is-centered">
            <div class="column is-one-third">
                <div class="field">
                    <p class="title is-size-4 has-text-centered">Nombre de materia</p>
                </div>
                <div class="field has-text-centered is-size-5">
                    @Html.DisplayFor(model => model.nombre)
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="columns is-centered">
                        <div class="column is-one-third">
                            <input type="submit" value="Borrar" class="button is-danger is-fullwidth" />
                        </div>
                        <div class="column is-one-third">
                            @Html.ActionLink("Volver a lista", "Index", null, new { @class = "button is-fullwidth" })
                        </div>
                    </div>
                }
            </div>

        </div>

        


    </section>
</div>
